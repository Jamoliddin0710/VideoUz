@model ModuleCreateViewModel

@{
    ViewData["Title"] = "Create Module";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Create Module #@ViewBag.ModuleNumber</h3>
                    <small>For course: @ViewBag.CourseName</small>
                </div>

                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }

                    <form asp-action="Create" method="post">
                        <input type="hidden" asp-for="CourseId" />

                        <div class="form-group">
                            <label asp-for="Title" class="control-label"></label>
                            <input asp-for="Title" class="form-control" placeholder="Enter module title" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="4"
                                      placeholder="Enter module description (optional)"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Order" class="control-label"></label>
                            <input asp-for="Order" type="number" class="form-control" readonly />
                            <small class="form-text text-muted">
                                This module will be #@ViewBag.ModuleNumber in the course
                            </small>
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Create Module
                            </button>
                            <a asp-controller="Course" asp-action="Details"
                               asp-route-id="@Model.CourseId" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <!-- Mavjud modullar ro'yxati -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Existing Modules</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.ExistingModules != null && ViewBag.ExistingModules.Count > 0)
                    {
                        <ul class="list-group">
                            @foreach (var module in ViewBag.ExistingModules)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>
                                        <span class="badge badge-primary mr-2">@module.Order</span>
                                        @module.Title
                                    </span>
                                    <small class="text-muted">
                                        @module.Contents?.Count contents
                                    </small>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">No modules yet. This will be the first module.</p>
                    }
                </div>
            </div>
            
            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="mb-0">Tips</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li><i class="fas fa-check text-success"></i> Keep module titles clear and concise</li>
                        <li><i class="fas fa-check text-success"></i> Break down complex topics into smaller modules</li>
                        <li><i class="fas fa-check text-success"></i> Maintain logical order between modules</li>
                        <li><i class="fas fa-check text-success"></i> Each module should have 3-7 content items</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}