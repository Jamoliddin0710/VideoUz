@model ModuleCreateViewModel

@{
    ViewData["Title"] = "Modul yaratish";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Modul yaratish #@ViewBag.ModuleNumber</h3>
                    <small>Kurs uchun: @ViewBag.CourseName</small>
                </div>

                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="close" data-dismiss="alert" aria-label="Yopish">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }

                    <form asp-action="Create" method="post" id="createmoduleform">
                        <input type="hidden" asp-for="CourseId" />

                        <div class="form-group">
                            <label asp-for="Title" class="control-label">Sarlavha</label>
                            <input asp-for="Title" class="form-control" placeholder="Modul sarlavhasini kiriting" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Description" class="control-label">Tavsif</label>
                            <textarea asp-for="Description" class="form-control" rows="4"
                                      placeholder="Modul tavsifini kiriting (ixtiyoriy)"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Order" class="control-label">Tartib raqami</label>
                            <input asp-for="Order" type="number" class="form-control" readonly />
                            <small class="form-text text-muted">
                                Bu modul kursda #@ViewBag.ModuleNumber tartibida bo'ladi
                            </small>
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary" form="createmoduleform">
                                <i class="fas fa-save"></i> Modul qo‘shish
                            </button>
                            <a asp-controller="Course" asp-action="Details"
                               asp-route-id="@Model.CourseId" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Bekor qilish
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <!-- Mavjud modullar ro'yxati -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Mavjud modullar</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.ExistingModules != null && ViewBag.ExistingModules.Count > 0)
                    {
                        <ul class="list-group">
                            @foreach (var module in ViewBag.ExistingModules)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>
                                        <span class="badge badge-primary mr-2">@module.Order</span>
                                        @module.Title
                                    </span>
                                    <small class="text-muted">
                                        @module.Contents?.Count  ta kontent
                                    </small>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">Hozirda yaratilgan modul mavjud emas. 1-modulni yaratishingiz mumkin</p>
                    }
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="mb-0">Maslahatlar</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li><i class="fas fa-check text-success"></i> Modul sarlavhalarini aniq va ixcham yozing</li>
                        <li><i class="fas fa-check text-success"></i> Murakkab mavzularni kichik modullarga bo‘ling</li>
                        <li><i class="fas fa-check text-success"></i> Modullar orasidagi mantiqiy tartibni saqlang</li>
                        <li><i class="fas fa-check text-success"></i> Har bir modulda 3-7 ta kontent bo‘lishi kerak</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
