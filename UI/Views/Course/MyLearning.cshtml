<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>My Learning</h1>
    </div>

    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-filter me-2"></i>Filter Courses</h5>
        </div>
        <div class="card-body">
            <div class="flex box">
                <div class="flex-1">
                    <input type="search" id="searchInput" class="form-input" placeholder="Search all columns..." />
                </div>
                <div class="flex-1">
                    <button id="searchButton" class="button button-blue-back btn btn-primary">
                        <i class="fas fa-search me-2"></i>Search
                    </button>
                    <button id="clearButton" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-2"></i>Clear
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="row" id="coursesContainer">
    </div>
</div>

<script>
    $(document).ready(function() {
        loadCourses({
            propertyName: '',
            operation: 6,
            value: '',
            size: 10,
            page: 1,
        });

        $("#searchButton").click(function() {
            const searchTerm = $("#searchInput").val();

            const filter = {
                propertyName: '',
                operation: 6,
                value: searchTerm,
                size: 10,
                page: 1,
            };

            loadCourses(filter);
        });

        $("#searchInput").keypress(function(e) {
            if(e.which == 13) {
                $("#searchButton").click();
            }
        });

        $("#clearButton").click(function() {
            $("#searchInput").val('');

            loadCourses({
                propertyName: '',
                operation: 6,
                value: '',
                size: 10,
                page: 1,
            });
        });

        function loadCourses(filter) {
            $.ajax({
                url: "@Url.Action("GetMyCourses", "Course")",
                type: "POST",
                contentType: "application/json",
                data: JSON.stringify(filter),
                success: function(response) {
                    if(response.statusCode === 200) {
                        displayCourses(response.result);

                        if(response.result.length === 0 && filter.value) {
                            showNotification(true, "Info", "No courses match your search.");
                        }
                    } else {
                        showNotification(false, "Error", response.message || "Failed to load courses");
                    }
                },
                error: function(xhr, status, error) {
                    showNotification(false, "Error", "Request failed: " + error);
                }
            });
        }

        function displayCourses(courses) {
            const $container = $("#coursesContainer");
            $container.empty();

            if(!courses || courses.length === 0) {
                $container.html('<div class="col-12"><div class="alert alert-info">No courses found.</div></div>');
                return;
            }

            courses.forEach(function(course) {
                const courseCard = `
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="course-image-container">
                            <img src="${course.coverImage}" class="card-img-top" alt="${course.name}">
                            <div class="course-overlay">
                                <a href="/Course/MyCourse/${course.id}" class="btn btn-light btn-continue">Continue Learning</a>
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">${course.name}</h5>
                            <p class="card-text">
                                <span class="author-badge"><i class="fas fa-chalkboard-teacher"></i> ${course.author}</span>
                            </p>
                            <div class="progress-container">
                                <div class="d-flex justify-content-between mb-1">
                                    <small>Progress</small>
                                    <small><strong>${course.completionPercentage}%</strong></small>
                                </div>
                                <div class="progress">
                                    <div class="progress-bar" role="progressbar" style="width: ${course.completionPercentage}%"></div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="rating">
                                    ${getRatingStars(course.rating)}
                                </div>
                                <a href="/Course/MyCourse/${course.id}"  class="btn btn-primary btn-sm">
                                    <i class="fas fa-book-open me-1"></i> Go to Course
                                </a>
                            </div>
                        </div>
                    </div>
                </div>`;

                $container.append(courseCard);
            });

            // Add hover effect after cards are added
            $(".card").hover(
                function() {
                    $(this).find(".course-overlay").fadeIn(300);
                },
                function() {
                    $(this).find(".course-overlay").fadeOut(300);
                }
            );
        }

        function getRatingStars(rating) {
            let stars = '';
            for(let i = 0; i < 5; i++) {
                if(i < rating) {
                    stars += '<i class="fas fa-star text-warning"></i>';
                } else {
                    stars += '<i class="far fa-star text-warning"></i>';
                }
            }
            return stars;
        }

        function showNotification(isSuccess, title, message) {
            toastr.options = {
                "positionClass": "toast-top-right",
                "timeOut": "3000",
                "closeButton": true,
                "progressBar": true
            };

            if(isSuccess) {
                toastr.success(message, title);
            } else {
                toastr.error(message, title);
            }
        }
    });
</script>

