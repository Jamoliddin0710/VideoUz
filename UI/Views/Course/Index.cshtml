@using Application.Helpers
@using Domain.Entities
@model List<CourseListViewModel>

@{
    ViewData["Title"] = "All Courses";
}

<div class="container mt-4">
    @if (User.IsInRole(nameof(Role.Teacher)))
    {
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>All Courses</h1>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create New Course
            </a>
        </div>
    }
    @if (Model.Any())
    {
        <div class="row">
            @foreach (var course in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        @if (!string.IsNullOrEmpty(course.CoverImageUrl))
                        {
                            <img src="@course.CoverImageUrl" class="card-img-top" alt="@course.Title">
                        }
                        else
                        {
                            <div
                                class="card-img-top bg-secondary text-white d-flex align-items-center justify-content-center"
                                style="height: 200px;">
                                <h4>@course.Title</h4>
                            </div>
                        }

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@course.Title</h5>
                            <p class="card-text">@course.Description</p>

                            <div class="mt-auto">
                                <div class="mb-3">
                                    <span class="badge bg-primary">@course.Category</span>
                                    <span class="badge bg-success">$@course.Price</span>
                                    @if (User.IsInRole(nameof(Role.Teacher)))
                                    {
                                        @if (course.IsPublished)
                                        {
                                            <span class="badge bg-info">Published</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">Draft</span>
                                        }
                                    }

                                </div>

                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">
                                        @course.ModulesCount modules | @course.StudentsCount students
                                    </small>
                                </div>

                                <div class="mt-3">
                                    <a asp-action="Details" asp-route-id="@course.Id"
                                       class="btn btn-primary btn-sm">
                                        View Details
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@course.Id"
                                       class="btn btn-outline-secondary btn-sm">
                                        Edit
                                    </a>
                                    @if (!course.IsPublished)
                                    {
                                        <button class="btn btn-outline-success btn-sm" onclick="publish(@course.Id)">
                                            Publish
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <h4 class="alert-heading">No courses yet!</h4>
            <p>Start by creating your first course.</p>
            <hr>
            <a asp-action="Create" class="btn btn-primary">Create Course</a>
        </div>
    }
</div>

@section Scripts
{
    <script>
        function publish(id) {
            if (confirm('Are you sure?')) {
                fetch(`/Course/PublishCourse/${id}`, {
                    method: 'GET',
                })
                    .then(response => {
                        if (response.ok) {
                            alert('Published successfully!');
                            location.reload();
                        } else {
                            alert('Failed to publish the course.');
                        }
                    })
                    .catch(error => {
                        alert('Error: ' + error);
                    });
            }
        }
    </script>
}
