@model CourseDetailViewModel

@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-4">
    <!-- Course Header Section -->
    <div class="row mb-4">
        <div class="col-md-8">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Courses</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
                </ol>
            </nav>
            
            <h1 class="display-4">@Model.Title</h1>
            <p class="lead">@Model.Description</p>
            
            <div class="d-flex align-items-center mb-3">
                <span class="badge bg-primary me-2">@Model.Category.Name</span>
                <span class="badge bg-success me-2">$@Model.Price</span>
                @if (Model.IsPublished)
                {
                    <span class="badge bg-info me-2">Published</span>
                }
                else
                {
                    <span class="badge bg-warning me-2">Draft</span>
                }
                <small class="text-muted">Created: @Model.CreatedDate.ToString("MMM dd, yyyy")</small>
            </div>
            
            <!-- Action Buttons -->
            <div class="mb-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Edit Course
                </a>
                <a asp-controller="Module" asp-action="Create" asp-route-courseId="@Model.Id" 
                   class="btn btn-success">
                    <i class="fas fa-plus"></i> Add Module
                </a>
                @if (!Model.IsPublished)
                {
                    <a asp-action="Publish" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-upload"></i> Publish Course
                    </a>
                }
                <a asp-action="Delete" asp-controller="Course" asp-route-id="@Model.Id" class="btn btn-danger"
                   onclick="deleteModule(@Model.Id)">
                    <i class="fas fa-trash"></i> Delete Course
                </a>
            </div>
        </div>
        
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.CoverImageUrl))
            {
                <img src="@Model.CoverImageUrl" class="img-fluid rounded shadow" alt="Course cover">
            }
            else
            {
                <div class="bg-light rounded p-5 text-center">
                    <i class="fas fa-image fa-3x text-muted"></i>
                    <p class="mt-2 text-muted">No cover image</p>
                </div>
            }
        </div>
    </div>
    
    <!-- Modules Section -->
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">Course Modules</h2>
            
            @if (Model?.Modules != null && Model.Modules.Any())
            {
                <div class="accordion" id="modulesAccordion">
                    @foreach (var module in Model.Modules)
                    {
                        <div class="accordion-item mb-3">
                            <h2 class="accordion-header" id="heading-@module.Id">
                                <button class="accordion-button collapsed" type="button" 
                                        data-bs-toggle="collapse" data-bs-target="#module-@module.Id">
                                    <span class="badge bg-primary me-2">Module @module.Order</span>
                                    <strong>@module.Title</strong>
                                    <span class="ms-auto me-3 text-muted">
                                        @module.Contents?.Count() contents
                                    </span>
                                </button>
                            </h2>
                            <div id="module-@module.Id" class="accordion-collapse collapse" 
                                 data-bs-parent="#modulesAccordion">
                                <div class="accordion-body">
                                    <p>@module.Description</p>
                                    
                                    <div class="mb-3">
                                        <a asp-controller="Content" asp-action="Create" 
                                           asp-route-moduleId="@module.Id" 
                                           class="btn btn-sm btn-success">
                                            <i class="fas fa-plus"></i> Add Content
                                        </a>
                                        <a asp-controller="Module" asp-action="Edit" 
                                           asp-route-id="@module.Id" 
                                           class="btn btn-sm btn-primary">
                                            <i class="fas fa-edit"></i> Edit Module
                                        </a>
                                        <a   class="btn btn-sm btn-danger"
                                           onclick="deleteModule(@module.Id)">
                                            <i class="fas fa-trash"></i> Delete
                                        </a>
                                    </div>
                                    
                                    @if (module.Contents != null && module.Contents.Any())
                                    {
                                        <h5>Contents:</h5>
                                        <div class="list-group">
                                            @foreach (var content in module.Contents)
                                            {
                                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                                    <div>
                                                        <span class="badge bg-secondary me-2">@content.Order</span>
                                                        <strong>@content.Title</strong>
                                                        <span class="badge bg-info ms-2">@content.ContentType</span>
                                                        @if (content.Duration.HasValue)
                                                        {
                                                            <small class="text-muted ms-2">
                                                                @content.Duration min
                                                            </small>
                                                        }
                                                    </div>
                                                    <div>
                                                        <a asp-controller="Content" asp-action="Edit" 
                                                           asp-route-id="@content.Id" 
                                                           class="btn btn-sm btn-outline-primary">
                                                            Edit
                                                        </a>
                                                        <a asp-controller="Content" asp-action="Delete" 
                                                           asp-route-id="@content.Id" 
                                                           class="btn btn-sm btn-outline-danger"
                                                           onclick="return confirm('Delete this content?')">
                                                            Delete
                                                        </a>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <p class="text-muted">No content added yet.</p>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <h4 class="alert-heading">No modules yet!</h4>
                    <p>Start by adding modules to your course.</p>
                    <hr>
                    <a asp-controller="Module" asp-action="Create" asp-route-courseId="@Model.Id" 
                       class="btn btn-primary">
                        <i class="fas fa-plus"></i> Add First Module
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
    
        var accordionItems = document.querySelectorAll('.accordion-button');
        accordionItems.forEach(function(item) {
            item.addEventListener('click', function() {
                // Accordion logic
            });
        });

        function deleteModule(id) {
            if (confirm('Are you sure?')) {
                fetch(`/Module/Delete/${id}`, {
                    method: 'DELETE',
                })
                    .then(response => {
                        if (response.ok) {
                            alert('Deleted successfully!');
                            location.reload();  
                        } else {
                            alert('Failed to delete the item.');
                        }
                    })
                    .catch(error => {
                        alert('Error: ' + error);
                    });
            }
        }
    </script>
}


    <style>
        .accordion-button:not(.collapsed) {
            background-color: #f8f9fa;
            color: #0d6efd;
        }
        
        .accordion-button:focus {
            box-shadow: none;
            border-color: rgba(0,0,0,.125);
        }
        
        .list-group-item {
            border-left: 3px solid #0d6efd;
        }
    </style>
