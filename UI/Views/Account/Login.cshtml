@model Application.DTOs.LoginDTO

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h3 class="mb-0 font-weight-bold"><i class="fas fa-sign-in-alt me-2"></i>Tizimga kirish</h3>
                </div>
                <div class="card-body p-4">
                    <form method="post" asp-action="Login" asp-controller="Account" id="loginForm">
                        @*<input hidden type="text" asp-for="ReturnUrl"/>*@

                        <div class="form-floating mb-4">
                            <input type="text" asp-for="UserName" class="form-control custom-input"
                                   placeholder="Foydalanuvchi nomi yoki Email" required autocomplete="username" />
                            <label asp-for="UserName">
                                <i class="fas fa-user text-muted me-2"></i>Login yoki Email
                            </label>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4 password-container">
                            <input type="password" asp-for="Password" id="password" class="form-control custom-input"
                                   placeholder="Parol" required autocomplete="current-password" />
                            <label asp-for="Password">
                                <i class="fas fa-lock text-muted me-2"></i>Parol
                            </label>
                            <span class="password-toggle" onclick="togglePassword('password')">
                                <i class="fas fa-eye"></i>
                            </span>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-4">
                            <input class="form-check-input" type="checkbox" id="rememberMe" />
                            <label class="form-check-label user-select-none" for="rememberMe">
                                Meni eslab qolish
                            </label>
                        </div>

                        <div class="form-floating mb-3">
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </div>

                        <div class="d-grid gap-2 mb-4">
                            <button class="btn btn-primary btn-lg py-3 login-btn" type="submit">
                                <i class="fas fa-sign-in-alt me-2"></i>Kirish
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3 bg-light">
                    <div class="small mb-2">
                        Akkauntingiz yo'qmi?
                        <a asp-controller="Account" asp-action="Register" class="text-decoration-none">
                            <i class="fas fa-user-plus me-1"></i>Ro'yxatdan o'tish
                        </a>
                    </div>
                    <div class="small">
                        <a href="#" class="text-decoration-none text-muted">
                            <i class="fas fa-key me-1"></i>Parolni unutdingizmi?
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
    <script>

        function togglePassword(inputId) {
            const passwordInput = document.getElementById(inputId);
            const toggleIcon = event.currentTarget.querySelector('i');

            if (passwordInput.type === "password") {
                passwordInput.type = "text";
                toggleIcon.classList.remove("fa-eye");
                toggleIcon.classList.add("fa-eye-slash");
            } else {
                passwordInput.type = "password";
                toggleIcon.classList.remove("fa-eye-slash");
                toggleIcon.classList.add("fa-eye");
            }
        }

        // Form yuborishda animatsiya
        document.getElementById('loginForm').addEventListener('submit', function() {
            const button = document.querySelector('.login-btn');
            button.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Kirish...';
            button.disabled = true;
        });
    </script>
    <style>
        /* Form stillarni yangilash */
        .custom-input:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }

        .password-container {
            position: relative;
        }

        .password-toggle {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: #6c757d;
            z-index: 10;
        }

        .password-toggle:hover {
            color: #0d6efd;
        }

        .login-btn {
            transition: all 0.3s ease;
            font-weight: 500;
        }

        .login-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card {
            transition: all 0.3s ease;
        }

        .form-control {
            transition: border-color 0.2s ease;
        }

        /* Input fokusda bo'lganda animatsiya */
        .form-floating input:focus + label {
            color: #0d6efd;
        }

        /* Form check stilini yangilash */
        .form-check-input:checked {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }

        .form-check-input:focus {
            border-color: #86b7fe;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }

        /* Formani kengayish animatsiyasi */
        @@keyframes formEnter {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .card {
            animation: formEnter 0.5s ease-out;
        }
    </style>
}