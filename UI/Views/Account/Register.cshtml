@model Application.DTOs.RegisterDTO

<div class="d-flex justify-content-center ">
    <div class="col-lg-5">
        <main class="form-signin">
            <form method="post" asp-action="Register" asp-controller="Account">
                @*<input hidden type="text" asp-for="ReturnUrl"/>*@
                <div class="text-center my-4">
                    <h3 class="mb-3 font-weight-normal"> Register </h3>
                </div>

                <div class="form-floating  mb-3">
                    <input type="text" asp-for="Name" class="form-control " placeholder="Username or Name"/>
                    <label asp-for="Name"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input type="text" asp-for="Email" class="form-control " placeholder="Email"/>
                    <label asp-for="Email"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-floating  mb-3">
                    <input type="text" asp-for="Password" class="form-control" placeholder="Password"/>
                    <label asp-for="Password"></label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-floating  mb-3">
                    <input type="text" asp-for="ConfirmPassword" class="form-control" placeholder="ConfirmPassword"/>
                    <label asp-for="ConfirmPassword"></label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
                <div class="d-grid m-4 px-1">
                    <button class="btn btn-lg btn-info" type="submit">
                        Login
                    </button>
                </div>
            </form>
        </main>
    </div>
</div>


@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
