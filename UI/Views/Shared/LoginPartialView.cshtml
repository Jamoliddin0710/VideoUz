@using Application.Helpers
@using Domain.Entities

@if (User?.Identity?.IsAuthenticated ?? false)
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <span class="nav-link text-info-emphasis"> @User.GetUserName()</span>
        </li>
        @if (User?.IsInRole(Role.User.ToString()) ?? false)
        {
            <li class="nav-item">
                <a class="nav-link text-white @Html.IsActive("Index", "Channel")" asp-action="Index" asp-controller="Channel">
                    My Channel
                </a>
            </li>
        }
        <li class="nav-item">
            <a class="btn  btn-secondary" asp-controller="Account" asp-action="Logout">
                <i class="bi bi-door-closed"></i>
                Logout
            </a>
        </li> 
    </ul>
}
else
{
    <div class="me-1">
        <a class="btn btn-secondary me-2 @Html.IsActive("Login", "Account")" asp-controller="Account" asp-action="Login">
            <i class="bi bi-door-open"></i>
            Login
        </a>
    </div>
    <div class="me-1">
        <a class="btn btn-secondary me-2 @Html.IsActive("Register", "Account")" asp-controller="Account" asp-action="Register">
            <i class="bi bi-door-open-fill"></i>
            Register
        </a>
    </div>
}