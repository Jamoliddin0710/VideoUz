@model QuizResultViewModel

<div class="container quiz-results-page my-4">
    <div class="row">
        <div class="col-lg-4">
            <div class="summary-card mb-4">
                <div class="summary-header @(Model.IsPassed ? "header-success" : "header-failed")">
                    <h2 class="summary-title">
                        @(Model.IsPassed ? "Tabriklaymiz!" : "Afsuski")
                    </h2>
                    <p class="summary-subtitle">
                        @(Model.IsPassed ? "Siz testdan muvaffaqiyatli o'tdingiz!" : "Test sinovidan o'ta olmadingiz.")
                    </p>
                </div>
                
                <div class="summary-body">
                    <div class="text-center mb-4">
                        <div class="score-circle @(Model.IsPassed ? "score-success" : "score-failed")">
                            <div class="score-value">@Model.Percentage%</div>
                            <div class="score-label">Natija</div>
                        </div>
                    </div>
                    
                    <div class="result-progress">
                        <div class="progress-label d-flex justify-content-between">
                            <span>0%</span>
                            <span>@Model.PassingScore%</span>
                            <span>100%</span>
                        </div>
                        <div class="progress" style="height: 12px;">
                            <div class="progress-bar @(Model.IsPassed ? "bg-success" : "bg-danger")" 
                                role="progressbar" 
                                style="width: @Model.Percentage%;" 
                                aria-valuenow="@Model.Percentage" 
                                aria-valuemin="0" 
                                aria-valuemax="100">
                            </div>
                        </div>
                        <div class="pass-marker" style="left: @Model.PassingScore%;">
                            <div class="pass-line"></div>
                        </div>
                    </div>
                    
                    <div class="result-details mt-4">
                        <table class="table table-borderless">
                            <tbody>
                                <tr>
                                    <th>Test nomi:</th>
                                    <td>@Model.QuizTitle</td>
                                </tr>
                                <tr>
                                    <th>To'plangan ball:</th>
                                    <td>@Model.Score / @Model.MaxScore</td>
                                </tr>
                                <tr>
                                    <th>To'g'ri javoblar:</th>
                                    <td>@Model.CorrectAnswers / @Model.TotalQuestions</td>
                                </tr>
                                <tr>
                                    <th>O'tish bali:</th>
                                    <td>@Model.PassingScore%</td>
                                </tr>
                                <tr>
                                    <th>Boshlangan vaqt:</th>
                                    <td>@Model.StartTime.ToString("dd.MM.yyyy HH:mm")</td>
                                </tr>
                                <tr>
                                    <th>Yakunlangan vaqt:</th>
                                    <td>@(Model.EndTime?.ToString("dd.MM.yyyy HH:mm") ?? "-")</td>
                                </tr>
                                <tr>
                                    <th>Sarflangan vaqt:</th>
                                    <td>
                                        @if (Model.EndTime.HasValue)
                                        {
                                            var duration = Model.EndTime.Value - Model.StartTime;
                                            @($"{Math.Floor(duration.TotalMinutes)} daqiqa {duration.Seconds} soniya")
                                        }
                                        else
                                        {
                                            <span>-</span>
                                        }
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    
                    <div class="result-actions">
                        @if (!Model.IsPassed)
                        {
                            <a href="@Url.Action("StartQuiz", "Quiz", new { contentId = Model.ContentId})" 
                               class="btn btn-warning btn-lg w-100 mb-3">
                                <i class="fas fa-redo me-2"></i> Qayta urinish
                            </a>
                        }
                        <a href="@Url.Action("MyCourse", "Course", new { id = ViewBag.CourseId })" 
                           class="btn btn-primary btn-lg w-100">
                            <i class="fas fa-arrow-left me-2"></i> Kursga qaytish
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="stats-card">
                <div class="stats-header">
                    <h4><i class="fas fa-chart-pie me-2"></i> Statistika</h4>
                </div>
                <div class="stats-body">
                    <div class="stats-item">
                        <div class="stats-icon">
                            <i class="fas fa-check-circle"></i>
                        </div>
                        <div class="stats-content">
                            <div class="stats-value">@Model.CorrectAnswers</div>
                            <div class="stats-label">To'g'ri javoblar</div>
                        </div>
                    </div>
                    <div class="stats-item">
                        <div class="stats-icon">
                            <i class="fas fa-times-circle"></i>
                        </div>
                        <div class="stats-content">
                            <div class="stats-value">@(Model.TotalQuestions - Model.CorrectAnswers)</div>
                            <div class="stats-label">Noto'g'ri javoblar</div>
                        </div>
                    </div>
                    <div class="stats-item">
                        <div class="stats-icon">
                            <i class="fas fa-percentage"></i>
                        </div>
                        <div class="stats-content">
                            <div class="stats-value">@Model.Percentage%</div>
                            <div class="stats-label">Natija foizi</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-8">
            <div class="answers-card">
                <div class="answers-header">
                    <h3><i class="fas fa-tasks me-2"></i> Javoblar tahlili</h3>
                    <div class="filter-buttons">
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-sm btn-outline-secondary active" data-filter="all">
                                Barcha
                            </button>
                            <button type="button" class="btn btn-sm btn-outline-success" data-filter="correct">
                                To'g'ri javoblar
                            </button>
                            <button type="button" class="btn btn-sm btn-outline-danger" data-filter="incorrect">
                                Noto'g'ri javoblar
                            </button>
                        </div>
                    </div>
                </div>
                
                <div class="answers-body">
                    @foreach (var answer in Model.Answers.OrderBy(a => a.QuestionOrder))
                    {
                        <div class="answer-item mb-4 @(answer.IsCorrect ? "correct-answer" : "incorrect-answer")">
                            <div class="answer-header">
                                <div class="answer-number">Savol @answer.QuestionOrder</div>
                                <div class="answer-result @(answer.IsCorrect ? "result-correct" : "result-incorrect")">
                                    @if (answer.IsCorrect)
                                    {
                                        <i class="fas fa-check-circle me-1"></i> <span>To'g'ri</span>
                                    }
                                    else
                                    {
                                        <i class="fas fa-times-circle me-1"></i> <span>Noto'g'ri</span>
                                    }
                                </div>
                            </div>
                            
                            <div class="answer-content">
                                <div class="question-text">@answer.QuestionText</div>
                                
                                <div class="options-list mt-3">
                                    @foreach (var option in answer.Options)
                                    {
                                        string optionClass = "";
                                        string optionIcon = "";
                                        
                                        if (option.Id == answer.SelectedOptionId)
                                        {
                                            if (option.IsCorrect)
                                            {
                                                optionClass = "selected-correct";
                                                optionIcon = "fas fa-check-circle text-success";
                                            }
                                            else
                                            {
                                                optionClass = "selected-incorrect";
                                                optionIcon = "fas fa-times-circle text-danger";
                                            }
                                        }
                                        else if (option.IsCorrect)
                                        {
                                            optionClass = "correct-option";
                                            optionIcon = "fas fa-check-circle text-success";
                                        }
                                        else
                                        {
                                            optionIcon = "far fa-circle";
                                        }
                                        
                                        <div class="option-item @optionClass">
                                            <div class="option-icon">
                                                <i class="@optionIcon"></i>
                                            </div>
                                            <div class="option-text">
                                                @option.OptionText
                                            </div>
                                        </div>
                                    }
                                </div>
                                
                                @if (!answer.IsCorrect && !string.IsNullOrEmpty(answer.Explanation))
                                {
                                    <div class="answer-explanation mt-3">
                                        <div class="explanation-title">
                                            <i class="fas fa-info-circle me-2"></i> Izoh
                                        </div>
                                        <div class="explanation-content">
                                            @answer.Explanation
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Filter javoblar
            $(".filter-buttons .btn").click(function() {
                // Active class o'zgartirish
                $(".filter-buttons .btn").removeClass("active");
                $(this).addClass("active");
                
                // Filter qiymati
                const filterType = $(this).data("filter");
                
                // Barcha javoblarni filter qilish
                if (filterType === "all") {
                    $(".answer-item").show();
                } else if (filterType === "correct") {
                    $(".answer-item").hide();
                    $(".correct-answer").show();
                } else if (filterType === "incorrect") {
                    $(".answer-item").hide();
                    $(".incorrect-answer").show();
                }
            });
            
            // Progress bar animation
            $('.progress-bar').css('width', '0%').animate({
                width: '@Model.Percentage%'
            }, 1000);
        });
    </script>
}

